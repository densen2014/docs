<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignInMauiApp.SignInReportPage">
    <ScrollView>
        <VerticalStackLayout Padding="20,30" Spacing="10">
            <Label Text="REGISTRO DIARIO DE JORNADA EN TRABAJADORES" FontSize="22" HorizontalOptions="Center" />
            <HorizontalStackLayout Spacing="10">
                <Label x:Name="UsernameLabel" Text="TRABAJADOR" VerticalOptions="Center" />
                <Picker x:Name="UsernamePicker" WidthRequest="100" />
                <Label Text="Años" VerticalOptions="Center" />
                <Picker x:Name="YearPicker" WidthRequest="90" />
                <Label Text="Mes" VerticalOptions="Center" />
                <Picker x:Name="MonthPicker" WidthRequest="70" />
                <Button Text="Consulta" Clicked="OnQueryClicked" WidthRequest="100" />
                <Button Text="Hoy" Clicked="OnTodayClicked" WidthRequest="100" />
                <Button Text="Exportar Excel" Clicked="OnExportClicked" WidthRequest="120" />
                <Button Text="Exportar PDF" Clicked="OnExportPdfClicked" WidthRequest="120" />
                <Switch x:Name="DisableShareSwitch" Toggled="OnDisableShareToggled" VerticalOptions="Center" /> 
            </HorizontalStackLayout>

            <!-- 表头 -->
            <Grid x:Name="ReportTableGrid" ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="60"/> 
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Label Text="Trabajador" FontAttributes="Bold" Grid.Column="0" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Día del mes" FontAttributes="Bold" Grid.Column="1" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Entrada de mañana" FontAttributes="Bold" Grid.Column="2" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Salida de mañana" FontAttributes="Bold" Grid.Column="3" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Entrada de tarde" FontAttributes="Bold" Grid.Column="4" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Salida de tarde" FontAttributes="Bold" Grid.Column="5" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Total Horas Jornada" FontAttributes="Bold" Grid.Column="6" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Horas Ordinarias" FontAttributes="Bold" Grid.Column="7" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Horas Complementarias" FontAttributes="Bold" Grid.Column="8" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="Empresa" FontAttributes="Bold" Grid.Column="9" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            </Grid>

            <CollectionView x:Name="ReportCollectionView" ItemsLayout="VerticalList" Margin="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnSpacing="0" RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Username}" Grid.Column="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding Day}" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding MorningSignInTime, StringFormat='{0:HH:mm}'}" Grid.Column="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding MorningSignOutTime, StringFormat='{0:HH:mm}'}" Grid.Column="3" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding AfternoonSignInTime, StringFormat='{0:HH:mm}'}" Grid.Column="4" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding AfternoonSignOutTime, StringFormat='{0:HH:mm}'}" Grid.Column="5" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding TotalWorkHoursDisplay}" Grid.Column="6" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding NormalWorkHoursDisplay}" Grid.Column="7" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding ExtraWorkHoursDisplay}" Grid.Column="8" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding TenantName}" Grid.Column="9" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
