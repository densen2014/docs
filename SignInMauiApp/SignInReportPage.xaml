<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignInMauiApp.SignInReportPage">
    <ScrollView>
        <VerticalStackLayout Padding="20,30" Spacing="10">
            <Label Text="签到历史报表" FontSize="22" HorizontalOptions="Center" />
            <HorizontalStackLayout Spacing="10">
                <Label Text="员工名称" VerticalOptions="Center" />
                <Picker x:Name="UsernamePicker" WidthRequest="120" />
                <DatePicker x:Name="StartDatePicker" />
                <Label Text="至" VerticalOptions="Center" />
                <DatePicker x:Name="EndDatePicker" />
                <Button Text="查询" Clicked="OnQueryClicked" WidthRequest="100" />
                <Button Text="导出Excel" Clicked="OnExportClicked" WidthRequest="100" />
                <Button Text="导出PDF" Clicked="OnExportPdfClicked" WidthRequest="100" />
            </HorizontalStackLayout>

            <!-- 表头 -->
            <Grid x:Name="ReportTableGrid" ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="60"/> <!-- 假日 -->
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Label Text="员工" FontAttributes="Bold" Grid.Column="0" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="日" FontAttributes="Bold" Grid.Column="1" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="上午签到" FontAttributes="Bold" Grid.Column="2" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="上午签退" FontAttributes="Bold" Grid.Column="3" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="下午签到" FontAttributes="Bold" Grid.Column="4" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="下午签退" FontAttributes="Bold" Grid.Column="5" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="总工时" FontAttributes="Bold" Grid.Column="6" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="正常工时" FontAttributes="Bold" Grid.Column="7" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="补充工时" FontAttributes="Bold" Grid.Column="8" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label Text="公司" FontAttributes="Bold" Grid.Column="9" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            </Grid>

            <CollectionView x:Name="ReportCollectionView" ItemsLayout="VerticalList" Margin="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnSpacing="0" RowSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Username}" Grid.Column="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding Day}" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding MorningSignInTime, StringFormat='{0:HH:mm}'}" Grid.Column="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding MorningSignOutTime, StringFormat='{0:HH:mm}'}" Grid.Column="3" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding AfternoonSignInTime, StringFormat='{0:HH:mm}'}" Grid.Column="4" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding AfternoonSignOutTime, StringFormat='{0:HH:mm}'}" Grid.Column="5" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding TotalWorkHoursDisplay}" Grid.Column="6" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding NormalWorkHoursDisplay}" Grid.Column="7" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding ExtraWorkHoursDisplay}" Grid.Column="8" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                            <Label Text="{Binding TenantName}" Grid.Column="9" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
