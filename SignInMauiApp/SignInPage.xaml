<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignInMauiApp.SignInPage">
    <VerticalStackLayout Padding="30,60" Spacing="20">
        <Image  HeightRequest="100" WidthRequest="100" Source="logo.jpg" HorizontalOptions="Center" />
        <Label x:Name="WelcomeLabel" FontSize="20" HorizontalOptions="Center" />
        <Button Text="Marcar la entrada" Clicked="OnSignInClicked"  MaximumWidthRequest="600" />
        <Button Text="Marcar la salida" Clicked="OnSignOutClicked"  MaximumWidthRequest="600" />
        <Label x:Name="SignInResultLabel" FontSize="16" TextColor="Green" IsVisible="False" HorizontalOptions="Center"  />
    </VerticalStackLayout>
</ContentPage>
