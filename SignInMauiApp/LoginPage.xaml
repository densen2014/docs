<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignInMauiApp.LoginPage">
    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto,*" ColumnSpacing="6">
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="签到系统登录 Registro de jornada laboral" FontSize="24" HorizontalOptions="Center" />
        <VerticalStackLayout Grid.Column="0" Grid.Row="1" WidthRequest="450" Padding="30,60" Spacing="20">
            <Image HeightRequest="100" WidthRequest="100" Source="logo.jpg" HorizontalOptions="Center" />
            <Picker x:Name="TenantPicker" Title="选择公司" MaximumWidthRequest="600" />
            <Entry x:Name="UsernameEntry" Placeholder="用户名" MaximumWidthRequest="600" />
            <Entry x:Name="PasswordEntry" Placeholder="密码" IsPassword="True" MaximumWidthRequest="600" />
            <Button Text="登录" Clicked="OnLoginClicked" MaximumWidthRequest="600" />
            <Button Text="注册新用户" Clicked="OnRegisterClicked" MaximumWidthRequest="600" />
            <Label x:Name="SignInResultLabel" FontSize="16" TextColor="Green" IsVisible="False" />
            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" MaximumWidthRequest="600" />
        </VerticalStackLayout>
        <Image Grid.Column="1" Grid.Row="1" x:Name="ImageQR" Margin="50" HeightRequest="300" WidthRequest="300" HorizontalOptions="Fill" VerticalOptions="Fill">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageQRTapped" />
            </Image.GestureRecognizers>
        </Image>
    </Grid>
</ContentPage>
